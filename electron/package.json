{
  "name": "shamal-tools",
  "productName": "Shamal Tools",
  "version": "1.0.4",
  "description": "All-in-one aerial image management and geospatial utility tool",
  "author": "Shamal Technologies",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.shamal.tools",
    "productName": "Shamal Tools",
    "icon": "build/icon.ico",
    "copyright": "Copyright Â© 2025 Shamal Technologies",
    "asarUnpack": [
      "python/**"
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "python",
        "to": "python"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": true,
      "include": "build/installer.nsh",
      "artifactName": "Shamal-Tools-${version}-Setup.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^28.3.0"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2"
  }
}
